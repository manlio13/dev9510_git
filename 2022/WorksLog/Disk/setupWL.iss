AppVersion={#MyAppVersion}
;AppVerName={#MyAppName} {#MyAppVersion}
AppPublisher={#MyAppPublisher}
DefaultDirName={autopf}\{#MyAppName}
ChangesAssociations=yes
DefaultGroupName=My Program
AllowNoIcons=yes
LicenseFile=C:\Users\manli\Documents\Lavori\Projects\2022\WorksLog\Disk\Readme.txt
; Uncomment the following line to run in non administrative install mode (install for current user only.)
;PrivilegesRequired=lowest
OutputDir=C:\Users\manli\Documents\Lavori\Projects\2022\WorksLog\Disk
OutputBaseFilename=setup
SetupIconFile=C:\Users\manli\Documents\Lavori\Projects\2023Icon.ico
Compression=lzma
