[Tasks]
Name: "desktopicon"; Description: "{cm:CreateDesktopIcon}"; GroupDescription: "{cm:AdditionalIcons}"; Flags: unchecked

[Files]
Source: "C:\Users\manli\Documents\Lavori\Projects\2022\WorksLog\Disk\{#MyAppExeName}"; DestDir: "{app}"; Flags: ignoreversion
Source: "C:\Users\manli\Documents\Lavori\Projects\2022\WorksLog\Disk\DailyLog.ABS"; DestDir: "{app}"; Flags: ignoreversion
