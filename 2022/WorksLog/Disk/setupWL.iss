#define MyAppPublisher "MLSoft"
#define MyAppExeName "WrksLog.exe"
#define MyAppAssocName "workslog"
#define MyAppAssocExt ".exe"
#define MyAppAssocKey StringChange(MyAppAssocName, " ", "") + MyAppAssocExt

[Setup]
